<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:fitsSystemWindows="true"
                                    android:orientation="horizontal"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_imageview"
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/hundred"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/product_name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"/>

            <TextView
                android:id="@+id/product_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                />


            <TextView
                android:id="@+id/product_description_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_description"/>

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                />


            <TextView
                android:id="@+id/regular_price_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reguler_price"/>

            <TextView
                android:id="@+id/regular_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_200_0"
                />

            <TextView
                android:id="@+id/sale_price_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sale_price"/>

            <TextView
                android:id="@+id/sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_200_0"
                />

            <TextView
                android:id="@+id/colors_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colors"/>

            <TextView
                android:id="@+id/colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c"
                />


            <TextView
                android:id="@+id/stores_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stores"/>

            <TextView
                android:id="@+id/stores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c"
                />


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>